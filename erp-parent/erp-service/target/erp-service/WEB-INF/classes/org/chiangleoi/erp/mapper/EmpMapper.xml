<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.chiangleoi.erp.mapper.EmpMapper">

    <resultMap id="BaseResultMap" type="org.chiangleoi.erp.pojo.Emp">
        <id column="UUID" property="uuid" jdbcType="VARCHAR" />
        <result column="USERNAME" property="username" jdbcType="VARCHAR" />
        <result column="PWD" property="pwd" jdbcType="VARCHAR" />
    </resultMap>

    <select id="selectAll" resultType="org.chiangleoi.erp.pojo.Emp">
        select * from emp;
    </select>

    <select id="selectOne" resultType="org.chiangleoi.erp.pojo.Emp">
        select * from emp where UUID='1'
    </select>

</mapper>
